            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1>
                        <i class="fas fa-cog me-2" style="color: #8B4513;"></i>
                        Panel d'Administration
                    </h1>
                    <div class="badge bg-warning fs-6">
                        <%= pendingAnnouncements.length %> annonce(s) en attente
                    </div>
                </div>
            </div>
        </div>

        <% if (pendingAnnouncements.length === 0) { %>
            <div class="text-center py-5">
                <i class="fas fa-check-circle display-1 text-success mb-3"></i>
                <h3 class="text-muted">Aucune annonce en attente</h3>
                <p class="text-muted">Toutes les annonces ont été traitées. Bravo !</p>
                <a href="/" class="btn btn-primary" style="background-color: #8B4513; border-color: #8B4513;">
                    <i class="fas fa-eye me-2"></i>Voir les annonces validées
                </a>
            </div>
        <% } else { %>
            <div class="alert alert-info" role="alert">
                <i class="fas fa-info-circle me-2"></i>
                <strong>Instructions :</strong> Examinez chaque annonce et définissez un prix si vous la validez. 
                Les annonces validées apparaîtront immédiatement sur la page d'accueil.
            </div>

            <div class="row">
                <% pendingAnnouncements.forEach(announcement => { %>
                    <div class="col-lg-6 mb-4">
                        <div class="card h-100 admin-card shadow">
                            <% if (announcement.image_path) { %>
                                <img src="/uploads/<%= announcement.image_path %>" 
                                     class="card-img-top" 
                                     alt="<%= announcement.title %>">
                            <% } else { %>
                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center">
                                    <i class="fas fa-image fa-3x text-muted"></i>
                                </div>
                            <% } %>
                            
                            <div class="card-body">
                                <h5 class="card-title">
                                    <i class="fas fa-tag me-2" style="color: #8B4513;"></i>
                                    <%= announcement.title %>
                                </h5>
                                <p class="card-text">
                                    <%= announcement.description %>
                                </p>
                                
                                <div class="row mb-3">
                                    <div class="col-6">
                                        <small class="text-muted">
                                            <i class="fas fa-user me-1"></i>
                                            <strong>Vendeur :</strong><br>
                                            <%= announcement.user_name %>
                                        </small>
                                    </div>
                                    <div class="col-6">
                                        <small class="text-muted">
                                            <i class="fas fa-envelope me-1"></i>
                                            <strong>Email :</strong><br>
                                            <%= announcement.user_email %>
                                        </small>
                                    </div>
                                </div>
                                
                                <small class="text-muted d-block mb-3">
                                    <i class="fas fa-calendar-alt me-1"></i>
                                    Soumis le <%= new Date(announcement.created_at).toLocaleDateString('fr-FR') %> 
                                    à <%= new Date(announcement.created_at).toLocaleTimeString('fr-FR') %>
                                </small>

                                <div class="validation-form">
                                    <h6 class="mb-3">
                                        <i class="fas fa-gavel me-2"></i>Actions d'administration
                                    </h6>
                                    
                                    <form method="POST" action="/admin/validate/<%= announcement.id %>" class="mb-2">
                                        <div class="input-group mb-2">
                                            <span class="input-group-text">
                                                <i class="fas fa-coins"></i>
                                            </span>
                                            <input type="number" 
                                                   class="form-control" 
                                                   name="price" 
                                                   step="0.01" 
                                                   min="0" 
                                                   placeholder="Prix de vente (DH)"
                                                   required>
                                            <button type="submit" class="btn btn-success">
                                                <i class="fas fa-check me-1"></i>Valider
                                            </button>
                                        </div>
                                    </form>
                                    
                                    <form method="POST" action="/admin/reject/<%= announcement.id %>" class="d-inline">
                                        <button type="submit" class="btn btn-danger btn-sm" 
                                                onclick="return confirm('Êtes-vous sûr de vouloir refuser cette annonce ?')">
                                            <i class="fas fa-times me-1"></i>Refuser l'annonce
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } %>
    </div>

<%- include('partials/footer') %>
