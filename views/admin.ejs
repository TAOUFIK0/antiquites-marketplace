<%- include('partials/header', {title: 'Administration', user: {isAdmin: true}}) %>

<div class="admin-dashboard">
    <div style="margin-bottom: 2rem;">
        <h1 class="page-title">
            <i class="fas fa-cog"></i> Administration
        </h1>
        <p style="text-align: center; color: #666; font-size: 1.1rem;">
            Gérez les annonces en attente de validation
        </p>
    </div>

    <div class="stats-grid">
        <div class="stat-card" style="background: linear-gradient(135deg, #ffc107 0%, #fd7e14 100%);">
            <span class="stat-number"><%= pendingAnnouncements.length %></span>
            <div class="stat-label">En attente</div>
        </div>
        <div class="stat-card" style="background: linear-gradient(135deg, #28a745 0%, #20c997 100%);">
            <span class="stat-number"><%= approvedCount %></span>
            <div class="stat-label">Validées</div>
        </div>
        <div class="stat-card" style="background: linear-gradient(135deg, #dc3545 0%, #e83e8c 100%);">
            <span class="stat-number"><%= rejectedCount %></span>
            <div class="stat-label">Refusées</div>
        </div>
        <div class="stat-card" style="background: linear-gradient(135deg, #6f42c1 0%, #e83e8c 100%);">
            <span class="stat-number"><%= totalUsers %></span>
            <div class="stat-label">Utilisateurs</div>
        </div>
    </div>

    <% if (pendingAnnouncements.length === 0) { %>
        <div class="no-announcements">
            <i class="fas fa-check-circle"></i>
            <h3>Aucune annonce en attente</h3>
            <p>Toutes les annonces ont été traitées !</p>
        </div>
    <% } else { %>
        <h2 style="color: #8b4513; margin: 2rem 0 1rem 0; display: flex; align-items: center; gap: 0.5rem;">
            <i class="fas fa-hourglass-half"></i> Annonces en attente
        </h2>

        <div class="announcements-grid">
            <% pendingAnnouncements.forEach(function(announcement) { %>
                <div class="announcement-card" style="border: 3px solid #ffc107;">
                    <% 
                        // Traitement des images (nouvelles annonces avec JSON ou anciennes avec chemin simple)
                        let images = [];
                        if (announcement.image_path) {
                            try {
                                // Tenter de parser en JSON pour les nouvelles annonces
                                images = JSON.parse(announcement.image_path);
                                if (!Array.isArray(images)) {
                                    // Si ce n'est pas un array, c'est probablement une ancienne annonce
                                    images = [announcement.image_path];
                                }
                            } catch (e) {
                                // Si le parsing JSON échoue, c'est une ancienne annonce avec un seul chemin
                                images = [announcement.image_path];
                            }
                        }
                    %>
                    
                    <% if (images.length > 0) { %>
                        <div style="position: relative;">
                            <img src="/uploads/<%= images[0] %>" alt="<%= announcement.title %>" class="announcement-image">
                            <% if (images.length > 1) { %>
                                <div style="position: absolute; top: 10px; right: 10px; background: rgba(0,0,0,0.7); color: white; padding: 4px 8px; border-radius: 12px; font-size: 0.8rem;">
                                    <i class="fas fa-images"></i> <%= images.length %>
                                </div>
                            <% } %>
                        </div>
                    <% } else { %>
                        <div class="announcement-image" style="display: flex; align-items: center; justify-content: center; background: linear-gradient(45deg, #f0f0f0, #e0e0e0);">
                            <i class="fas fa-image" style="font-size: 3rem; color: #ccc;"></i>
                        </div>
                    <% } %>
                    
                    <div class="announcement-content">
                        <h3 class="announcement-title"><%= announcement.title %></h3>
                        <p class="announcement-description"><%= announcement.description %></p>
                        
                        <!-- Galerie d'images pour l'admin -->
                        <% if (images.length > 1) { %>
                            <div style="margin-bottom: 1rem;">
                                <h6 style="color: #8b4513; margin-bottom: 0.5rem;">
                                    <i class="fas fa-images"></i> Toutes les photos (<%= images.length %>)
                                </h6>
                                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(80px, 1fr)); gap: 0.5rem; max-width: 300px;">
                                    <% images.forEach((image, index) => { %>
                                        <img src="/uploads/<%= image %>" 
                                             alt="Photo <%= index + 1 %>"
                                             style="width: 100%; height: 60px; object-fit: cover; border-radius: 6px; border: 2px solid #ddd; cursor: pointer;"
                                             onclick="window.open('/uploads/<%= image %>', '_blank')"
                                             title="Cliquer pour agrandir">
                                    <% }) %>
                                </div>
                            </div>
                        <% } %>
                        
                        <div class="announcement-meta" style="margin-bottom: 1rem;">
                            <span><i class="fas fa-user"></i> <%= announcement.user_name %></span>
                            <span><i class="fas fa-calendar"></i> <%= new Date(announcement.created_at).toLocaleDateString('fr-FR') %></span>
                            <% if (announcement.phone) { %>
                            <span><i class="fas fa-phone"></i> <%= announcement.phone %></span>
                            <% } %>
                        </div>

                        <form method="POST" action="/admin/validate/<%= announcement.id %>" style="background: #f8f9fa; padding: 1rem; border-radius: 8px; margin-bottom: 1rem;">
                            <!-- Pas besoin de champ caché announcementId car l'ID est dans l'URL -->
                            
                            <div class="form-group" style="margin-bottom: 1rem;">
                                <label for="price_<%= announcement.id %>" style="font-weight: bold; color: #8b4513;">
                                    <i class="fas fa-coins"></i> Prix de vente (DH)
                                </label>
                                <input type="number" 
                                       id="price_<%= announcement.id %>" 
                                       name="price" 
                                       class="form-control" 
                                       step="0.01" 
                                       min="0" 
                                       placeholder="Ex: 1500.00"
                                       style="margin-top: 0.5rem;"
                                       required>
                            </div>

                            <div style="display: flex; gap: 0.5rem;">
                                <button type="submit" class="btn" style="flex: 1;">
                                    <i class="fas fa-check"></i> Valider
                                </button>
                            </div>
                        </form>
                        
                        <!-- Formulaire séparé pour rejeter -->
                        <form method="POST" action="/admin/reject/<%= announcement.id %>" style="margin-top: 0.5rem;">
                            <button type="submit" class="btn btn-danger" style="width: 100%;" 
                                    onclick="return confirm('Êtes-vous sûr de vouloir rejeter cette annonce ?')">
                                <i class="fas fa-times"></i> Refuser
                            </button>
                        </form>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } %>

    <% if (approvedCount > 0) { %>
        <div style="margin-top: 3rem; text-align: center;">
            <h3 style="color: #8b4513; margin-bottom: 1rem;">
                <i class="fas fa-chart-line"></i> Dernières statistiques
            </h3>
            <div style="background: white; padding: 2rem; border-radius: 15px; box-shadow: 0 4px 15px rgba(0,0,0,0.1);">
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 2rem;">
                    <div>
                        <div style="font-size: 2rem; font-weight: bold; color: #28a745;"><%= approvedCount %></div>
                        <div style="color: #666;">Annonces validées</div>
                    </div>
                    <div>
                        <div style="font-size: 2rem; font-weight: bold; color: #dc3545;"><%= rejectedCount %></div>
                        <div style="color: #666;">Annonces refusées</div>
                    </div>
                    <div>
                        <div style="font-size: 2rem; font-weight: bold; color: #8b4513;"><%= totalUsers %></div>
                        <div style="color: #666;">Utilisateurs inscrits</div>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</div>
            padding: 15px;
            border-radius: 10px;
            margin-top: 15px;
        }
    </style>
</head>
